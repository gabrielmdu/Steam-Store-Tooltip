{
    "name": "Steam Store Tooltip",
    "version": "1.0.0",
    "description": "Show Steam games information when hovering the store links.",
    "homepage_url": "https://github.com/gabrielmdu/Steam-Store-Tooltip",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "*://store.steampowered.com/*"
            ],
            "css": [
                "css/steamstoretooltip.css"
            ],
            "js": [
                "js/vendor.js",
                "js/steamstoretooltip.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_page": "html/options.html",
    "web_accessible_resources": [
        "html/steamstoretooltip.html",
        "steam_categories.json"
    ],
    "manifest_version": 2
}