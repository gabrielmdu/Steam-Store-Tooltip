{
    "name": "Steam Store Tooltip",
    "version": "1.1.0",
    "description": "Show Steam games information when hovering the store links.",
    "homepage_url": "https://github.com/gabrielmdu/Steam-Store-Tooltip",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "exclude_matches": [
            "*://store.steampowered.com/*"
        ],
        "css": [
            "css/vendor-sst.css",
            "font/fonts.css",
            "css/steamstoretooltip.css"
        ],
        "js": [
            "js/default_settings.js",
            "js/sst_template.js",
            "js/steam_images.js",
            "js/steamstoretooltip.js",
            "js/vendor-sst.js"
        ],
        "run_at": "document_idle"
    }],
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_page": "html/options.html",
    "web_accessible_resources": [
        "font/*.woff"
    ],
    "manifest_version": 2
}